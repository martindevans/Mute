@{
    ViewData["Title"] = "Home";
    Layout = "";
}

<html>
    <head>
        <title>*Mute</title>
        
        <style>
            html {
                width: 100%;
                height: 100%;
                margin: 0
            }

            body {
                width: 100%;
                height: 100%;
                margin: 0;
                background-color: #23272A;
            }

            .background {
                background-color: #23272A;
                width: 100%;
                height: 100%;
            }

            #login-box {
                box-shadow: 0 2px 10px 0 #000000;
                box-shadow: 0 2px 10px 0 rgba(0,0,0,.2);
                border-radius: 5px;
                padding: 30px;
                background: #23272A;
                display: grid;
                position: absolute;
                left: 50vw;
                top: 10vh;
                transform: translate(-50%, 0)
            }

            #sigil {
                width: 256px;
                height: auto;
            }

            .btn-login {
                box-sizing: border-box;
                background: #7289DA;
                text-align: center;
                margin-top: 10px;
                border-radius: 3px;
                padding-bottom: 2px;
                padding-top: 2px;
                font-family: Whitney, Helvetica Neue, Helvetica,Arial, sans-serif;
                user-select: none;
                font-weight: 500;
                justify-content: center;
                font-size: 16px;
                line-height: 24px;
                vertical-align: baseline;
                text-decoration: none;
                color: #fff;
                transition: background-color .17s ease, color .17s ease;
            }

            .btn-login:hover {
                background: #677bc4;
            }

            #mute-avatar {
                position: fixed;
                bottom: 0;
                right: 72px;
            }
        </style>
    </head>
    
<body>

<canvas class="background" id="canvas"></canvas>

<div id="login-box">
    <img id="sigil" src="/Sigil/@ViewData["ID"]?background=%2323272A&foreground=%2399AAB5" Alt="Sigil">
    <a asp-action="LoginDiscord" asp-controller="Account" class="btn btn-login">Discord Login</a>
</div>
    
<script src="js/Login.js"></script>

</body>
</html>


